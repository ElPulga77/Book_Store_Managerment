@using Book_Store_Memoir.Models.Models;
@model Book_Store_Memoir.Models.Models.Orders

@{
    ViewData["Title"] = "Chi tiết đơn hàng của bạn";

    List<OrderDetails> orderChitiets = ViewBag.ChiTiet;

}

<input type="hidden" asp-for="Id" />
<div class="container">
    <div class="card">
        <div class="card-body">
            <div id="invoice" class="p-h-30">
                <div class="row m-t-20 lh-2">
                    <div class="col-sm-6">
                        <h3 class="p-l-10 m-t-10">THÔNG TIN ĐƠN HÀNG:</h3>
                        <address class="p-l-10 m-t-10">
                            <span class="font-weight-semibold text-dark">Họ và Tên:  @Html.DisplayFor(model => model.RecieverName)</span><br>
                            <span>Địa chỉ: @Html.DisplayFor(model => model.Address) </span><br>
                            <span>Số điện thoại: @Html.DisplayFor(model => model.PhoneNumber) </span>
                        </address>
                    </div>
                    <div class="col-sm-6">
                        <div class="m-t-80">
                            <div class="text-dark text-uppercase d-inline-block">
                                <span class="font-weight-semibold text-dark">Mã đơn hàng :  @Html.DisplayFor(model => model.Id)</span>
                            </div>
                            <div class="float-right">#</div>
                        </div>
                        <div class="text-dark text-uppercase d-inline-block">
                            <span class="font-weight-semibold text-dark">Ngày đặt hàng : @Html.DisplayFor(model => model.OrderDate)</span>
                        </div>
                        <div class="float-right"></div>
                        <br />
                        <br />
                        <div class="text-dark text-uppercase d-inline-block">
                            <span class="font-weight-semibold text-dark">Trạng thái đơn hàng : @Html.DisplayFor(model => model.OrderStatus.Status)</span>
                        </div>
                        <div class="float-right"></div>
                    </div>
                </div>
                <div class="m-t-20">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Sản phẩm</th>
                                    <th>Hình ảnh</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (orderChitiets != null && orderChitiets.Count() > 0)
                                {
                                    int i = 1;
                                    foreach (var item in orderChitiets)
                                    {

                                        <tr>
                                            <th>@i</th>
                                            <td>@item.Book.Title</td>
                                            <td><img width="50" height="50" src="~/image/sanpham/@item.Book.Image" /></td>


                                            <td>
                                                <div class="input-group-prepend">

                                                    <input readonly type="text" disabled class="form-control text-center" value="@item.Quantity" style="width: 50px;" placeholder="">
                                                </div>
                                            </td>
                                            @*<td>@item.Book.Price.Value.ToString("#,##0") VNĐ</td>*@
                                            <td>@((item.Book.Price * item.Quantity).Value.ToString("#,##0")) VND</td>

                                            <td></td>
                                        </tr>
                                        i++;
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                    <div class="row m-t-30 lh-1-8">
                        <div class="col-sm-12">
                            <div class="float-right text-right">
                                <h3 style="float:right"><span class="font-weight-semibold text-dark">Tổng tiền: </span>@Model.TotalAmount.Value.ToString("#,##0") VNĐ</h3>
                                <div class="col">
                                    @if(Model.OrderStatusId!=1)
                                    {

                                    }
                                    else
                                    {
                                        <h3><a class="btn btn-danger" asp-controller="User" asp-action="CancelOrder" asp-route-id="@Model.Id" asp-route-userID="@Model.Customers.CustomerId">Hủy đơn hàng</a></h3>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        @*<form asp-action="ConfirmOrder" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <button style="float:left" type="submit" class="btn btn-success">Xác nhận đơn hàng</button>
                        </form>*@
                    </div>

                </div>
            </div>
        </div>
    </div>

