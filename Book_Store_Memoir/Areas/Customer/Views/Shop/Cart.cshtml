@model Book_Store_Memoir.Models.Models.Orders

@{
    ViewData["Title"] = "chonMua";
}
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="product-thumbnail">Hình ảnh</th>
                                <th class="product-name">Tên Sách</th>
                                <th class="product-price">Giá Bán</th>
                                <th class="product-quantity">Số Lượng</th>
                                <th class="product-total">Tổng</th>
                                <th class="product-remove"></th>
                            </tr>
                        </thead>
                        <tbody>
                           
                            @foreach (var item in Model.CartItems)
                            {
                              @*  <tr>
                                    <td>@item.Book.Title</td>
                                    <td>@item.Quantity</td>
                                    <!-- Thêm các cột khác tương ứng với thông tin sách -->
                                </tr>*@
                                <tr>
                                    <td class="product-thumbnail">
                                        <img src="~/image/sanpham/@item.Book.Image" alt="Image" class="img-fluid">
                                    </td>
                                    <td class="product-name">
                                        <h2 class="h5 text-black">@item.Book.Title</h2>
                                    </td>
                                    <td>@item.Book.Price.Value.ToString("#,##0") VND</td>
                                    <td>
                                        <div class="input-group mb-3" style="max-width: 120px;">
                                            <div class="input-group-prepend">
                                                <a asp-action="Minus" asp-route-cartId="@item.Book.Id" class="btn btn-success" type="button">&minus;</a>
                                            </div>
                                            <input readonly type="text" class="form-control text-center" value="@item.Quantity" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                                            <div class="input-group-append">
                                                <a asp-action="Plus" asp-route-cartId="@item.Book.Id" class="btn btn-success" type="button">&plus;</a>
                                            </div>
                                        </div>
                                       
                                    </td>
                                    <td>@((item.Book.Price * item.Quantity).Value.ToString("#,##0")) VND</td>

                                    <td><a asp-action="Delete" asp-route-cartId="@item.Book.Id" class="btn btn-success btn-sm">X</a></td>
                                </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="row mb-5">
                    
                    <div class="col-md-6">
                        <button onclick="window.location='Index'" class="btn btn-success">Tiếp tục mua hàng</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        
                        <p>Nhập mã giảm giá của bạn.</p>
                    </div>
                    <form asp-action="Cart" method="post" class="d-flex align-items-center">
                    <div class="col-md-8 mb-3 mb-md-0 d-flex">
                    <input type="text" class="form-control py-3 w-200" name="coupon" placeholder="Mã giảm giá">
                    <button class="btn btn-success btn-sm ml-2">Apply Mã </button>
                    </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 pl-5">
                <div class="row justify-content-end">
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-md-12 text-right border-bottom mb-5">
                                <h3 class="text-black h4 text-uppercase">Tổng đơn hàng</h3>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <span class="text-black">Tổng tiền:</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">@Model.CartItems.First().OrderTotal.ToString("#,##0") VNĐ</strong>
                            </div>      
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-6">
                                <span class="text-black">Số tiền được giảm:</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black"></strong>
                            </div>
                            <div class="col-md-6">
                                <span class="text-black">Tổng đơn hàng:</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">@Model.CartItems.First().OrderTotal.ToString("#,##0") VNĐ</strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <button asp-action="" class="btn btn-success btn-lg py-3 btn-block" onclick="window.location='Checkout'">Tiến hành đặt hàng</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    /* Chỉnh màu nền và màu chữ cho nút */
    .btn {
        background-color: #007bff;
        color: #fff;
    }

        /* Hiệu ứng hover cho nút */
        .btn:hover {
            background-color: #0056b3;
        }

    /* Tùy chỉnh màu chữ cho các tiêu đề */
    h2.text-black {
        color: #333;
    }

    /* Tùy chỉnh kích thước hình ảnh sản phẩm */
    .product-thumbnail img {
        max-width: 100px;
        height: auto;
    }

    /* Thay đổi khoảng cách giữa các hàng */
    tbody tr {
        margin-bottom: 10px;
    }

</style>
