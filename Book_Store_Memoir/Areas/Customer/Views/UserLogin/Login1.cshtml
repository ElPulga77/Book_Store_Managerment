@model Book_Store_Memoir.Models.Models.Customers

@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row py-5">
        <form class="col-md-9 m-auto" asp-action="Login1" method="post">
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="Name">Tên khách hàng</label>
                    <input asp-for="Name" class="form-control mt-1">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label for="inputemail">Mật khẩu</label>
                    <input type="password" asp-for="Password" class="form-control mt-1">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <button type="submit" class="btn btn-success btn-lg px-3">Đăng nhập</button>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col text-end mt-2">
                <a asp-action="Register" class="btn btn-success btn-lg px-3">Đăng ký tài khoản</a>
            </div>
        </div>
    </div>
</div>

