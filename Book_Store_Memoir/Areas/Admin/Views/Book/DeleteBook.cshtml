@model Book_Store_Memoir.Models.Book

@{
    ViewData["Title"] = "Details";

}
@if ((int)ViewBag.flag == 0)
{

    <h3>Bạn có thực sự muốn xóa?</h3>
    <a asp-action="Index" class="btn btn-primary">Hủy Bỏ</a>
}
else
{
    <h3>Bạn không thể xóa sản phẩm này vì hiện tại đã có khách đặt hàng sản phẩm này!!</h3>
}
<div class="card-body">
    <h4 class="card-title">Thông tin sản phẩm: @Model.Title</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.Id</td>
                </tr>
                <tr>
                    <td>Tên sản phẩm:</td>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <td>Thể loại:</td>
                    <td>@Model.Category.Name</td>
                </tr>
                <tr>
                    <td>Ngày xuất bản:</td>
                    <td>@Model.Publication_Date</td>
                </tr>
                <tr>
                    <td>Ngôn ngữ:</td>
                    <td>@Model.Language.Language_Name</td>
                </tr>
                <tr>
                    <td>Nhà xuất bản:</td>
                    <td>@Model.Publisher.Name</td>
                </tr>
                <tr>
                    <td>Tác giả:</td>
                    @*<td>@Model.BookAuthors.First().Author.NameAuhor</td>*@
                </tr>
                <tr>
                    <td>Giá:</td>
                    <td>@Model.Price.Value.ToString("#,##0") VNĐ</td>
                </tr>
                <tr>
                    <td>Hình ảnh:</td>
                    <td>
                        <img width="200" height="200" src="~/image/sanpham/@Model.Image" />
                    </td>
                </tr>

            </tbody>

        </table>
        <form asp-action="Delete" asp-route-id="@Model.Id">
            @if ((int)ViewBag.flag == 0)
            {

                <input type="submit" value="Xóa" class="btn btn-danger" />
            }
            else
            {
                <h3>Bạn không thể xóa sản phẩm này vì hiện tại đã có khách đặt hàng sản phẩm này!!</h3>
            }


        </form>
    </div>
</div>

